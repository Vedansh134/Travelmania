<style>
  /* Existing styles (You can keep your existing styles, or remove some) */
  .btn-search {
    background-color: #fe424d;
    color: #fff;
    padding: 0.5rem 1rem;
    border: none;
  }

  .btn-search:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .btn-search i {
    margin-right: 0.5rem;
  }

  /* New styles for responsiveness and better layout */
  .navbar-nav .nav-link {
    margin-left: 1rem;
  }

  .navbar-nav .nav-link b {
    font-weight: bold;
  }

  .tax-toggle {
    margin-left: auto;
    margin-right: 1rem;
  }

  .form-control {
    width: 100% !important;
  }

  a.hover:hover {
    background: #fe424d;
    border-radius: 5px;
    height: 2.3rem;
  }

  .styl {
    border-radius: 5px;
    color: #000;
    background: #fe424d;
    height: 2.3rem;
  }

  .navbar-collapse {
    background-color: rgb(246 244 244);
    box-shadow: 5px 10px 15px rgba(0, 0, 0, 0.5);
  }

  .mr {
    margin-right: 1em;
  }

  .view-h {
    height: 3rem;
  }

  .view-w {
    width: 11rem;
  }

  @media (max-width: 895px) and (min-width: 786px) {
    .form-control {
      width: 11rem;
    }
  }

  @media (min-width: 325px) {
    .form-control {
      width: 10rem;
    }
  }

  @media (max-width: 768px) {
    .tax-toggle {
      margin-top: 1rem;
      margin-left: 0;
    }

    .navbar-nav {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>
<nav class="navbar navbar-expand-md navbar-light bg-light border-bottom sticky-top mb-3">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>
      <div class="navbar-nav ms-auto">
        <form class="d-flex mb-2">
          <input class="form-control me-2 view-h" type="search" placeholder="Search destinations">
          <button class="btn btn-search view-h view-w" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
        </form>
      </div>
      <div class="navbar-nav ms-auto mr">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if(!currUser) { %>
          <a class="nav-link hover" href="/signup"><b>Sign up</b></a>
          <a class="nav-link styl" href="/login"><b>Log in</b></a>
        <% } %>
        <% if(currUser) { %>
          <a class="nav-link hover" href="/logout"><b>Logout</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>